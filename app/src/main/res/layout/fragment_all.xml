<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ffffff"
            android:elevation="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:padding="5dp"
                android:rotation="0"

                android:tint="@color/ideaBule"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:paddingRight="30dp"
                android:text="ステップ一覧"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/toIdea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:rotation="5"

                    android:text="アイデア(ステップ1)"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/toCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ideaBule"
                    android:rotation="-5"
                    android:text="カテゴライズ(ステップ2)"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/toCreated"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_purple"
                    android:rotation="5"
                    android:text="結論(ステップ3)"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>